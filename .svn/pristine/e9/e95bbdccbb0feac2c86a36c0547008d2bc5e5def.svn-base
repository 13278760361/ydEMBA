<script>
 function returnfunc(data){
        var html = '';
              for (key in data){
		              	if (data[key].status == 0) {
		                html +="<a class='n_item' href='/index.php?s=/Home/Vote/info/id/"+data[key].id+"/status/"+data[key].status+"'><h5>"+data[key].title+"</h5><p>"+data[key].intro+"</p><div class='state'>未选</div></a>";
		          
						}else if( data[key].status == 1 ){
		    			 html +="<a class='n_item' href='/index.php?s=/Home/Vote/info/id/"+data[key].id+"/status/"+data[key].status+"'><h5>"+data[key].title+"</h5><p>"+data[key].intro+"</p><div class='state green'>参加</div></a>";	
						}else if( data[key].status == -1 ){
						  html +="<a class='n_item' href='/index.php?s=/Home/Vote/info/id/"+data[key].id+"/status/"+data[key].status+"'><h5>"+data[key].title+"</h5><p>"+data[key].intro+"</p><div class='state red'>不参加</div></a>";			
						}

              }
       
         $(".n_box").append(html);
    }	
</script>